<header>
	<h2>Welcome to SIT Reviews!</h2>
</header>

{{#if error}}
<div class="login-container">
<div class="row">
	<h2>Error:</h2>
	{{error}}
</div>
</div>
{{/if}}

<div class="login-container">
	<div class="row">

	<div class="col">
	<form id="login-form" method="post" action="/login">
		<label for="username">Username: </label>
		<input type="text" name="username" id="username">
		<br>
		<label for="password">Password: </label>
		<input type="password" name="password" id="password">
		<button class="login" type="submit">Log in</button>
	</form>
	</div>

	<div class="line">
		<span class="vl-txt">or</span>
	</div>

	<div class="col">
	<form id="sign_up_form" method="post" action="/signup">
		<label for="username">Username: </label>
		<input type="text" name="username" id="signUpUsername">
		<br>

		<label for="password">Password: </label>
		<input type="password" name="password" id="signUpPassword">
		<br>

		<label for="re_password">Retype Password: </label>
		<input type="password" name="re_password" id="re_password">
		<br>

		<label for="name">Enter Your Name: </label>
		<input type="text" name="name" id="name">
		<br>

		<button class="login" type="submit">Sign Up</button>
	</form>

	</div>
	</div>
</div>
<script src="public/form.js"></script>